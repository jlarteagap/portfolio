---
import BaseLayout from '../layouts/BaseLayout.astro';
import Layout from '../components/layout.jsx';
import Home from '../components/home';
import About from '../components/about/about';
import Skills from '../components/skills';
import Contact from '../components/contact/contact';
import { Experience } from '../components/experience';
import ProjectsSection from '../components/sections/Projects/ProjectsSection';
import { aboutData } from '../data/about';

const { social, contact, data, about, experience, skills } = aboutData;

const pageTitle = `${aboutData.data.carrer} | ${aboutData.data.name}`;
const pageDescription = aboutData.data.description;
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <Layout headerType="developer" client:load>
    <Home siteTitle={data} client:load />
    <About about={about} client:visible />
    <Experience experience={experience} client:visible />
    <ProjectsSection client:visible />
    <Skills skills={skills} client:visible />
    <Contact social={social} contact={contact} client:visible />
  </Layout>
</BaseLayout>
